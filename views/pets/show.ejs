<%- include('../partials/header') %>

    <body>
        <a href="/pets/<%=pet.id%>/posts/new">Create Post</a>
        <div>
            <p>
                <%= pet.name %>
            </p>
            <p> Age: <%= pet.age %>
            </p>
            <p>Birthday: <%= new Date(pet.birthday).toLocaleDateString() %>
            </p>
            <p>
                <%= pet.animal %> Breed:</span>
                    <%= pet.breed %>
            </p>
            <p>Owner: <%= user.name %>
            </p>
        </div>

        <% pet.posts.forEach(function(post){ %>
            <img src="<%=post.img%>" alt="pet">
            <p>
                <%=post.caption%>
            </p>
            <p>Pet Name: <a href="/pets/<%=pet.id%>">
                    <%=pet.name%>
                </a></p>
            <p>Posted By: <a href="/<%=pet.owner.id%>">
                    <%=pet.owner.name%>
                </a></p>
            <%if (user?._id.equals(pet.owner.id)){ %>
                <form action="/post/<%=post.id%>?_method=DELETE" method="POST">
                    <a href="/post/<%=post.id%>">View post</a> <input id="delete-btn" type="submit"
                        value="DELETE">
                </form>
                <% } else {%>
                    <a href="/post/<%=post.id%>">View post</a>
                <% } %>
                <div>
                    <p>Comments..</p>
                    <%if(post.comments.length){%>
                        <ul>
                            <%post.comments.forEach(function(comment){ %>
                            <li>
                            <%=comment.author.name%>: <%=comment.content%>
                            </li>
                            <% if(user?._id.equals(comment.author.id)){ %>
                                <form action="/comment/<%=comment.id%>?_method=DELETE" method="POST">
                                    <input type="submit" value="Delete">
                                </form>
                            <% } %>
                        <% }) %>
                        </ul>
                    <% } %>
                </div>
            <% }) %>
    </body>