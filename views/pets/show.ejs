<%- include('../partials/header') %>

    <body id="showPet-body">
        <a id="create-link" href="/pets/<%=pet.id%>/posts/new">Create Post</a>
        <div id="pet-info">
            <p class="pet-data-show">
                <%= pet.name %>
            </p>
            <p class="pet-data-show"> Age: <%= pet.age %>
            </p>
            <p class="pet-data-show">Birthday: <%= new Date(pet.birthday).toLocaleDateString() %>
            </p>
            <p class="pet-data-show">
                <%= pet.animal %> Breed:</span>
                    <%= pet.breed %>
            </p>
            <p class="pet-data-show">Owner: <%= user.name %>
            </p>
        </div>

        <% pet.posts.forEach(function(post){ %>
            <img id="show-petPic" src="<%=post.img%>" alt="pet">
            <p class="pet-data-show">
                <%=post.caption%>
            </p>
            <p class="pet-data-show">Pet Name: <a href="/pets/<%=pet.id%>">
                    <%=pet.name%>
                </a></p>
            <p class="pet-data-show">Posted By: <a href="/<%=pet.owner.id%>">
                    <%=pet.owner.name%>
                </a></p>
            <%if (user?._id.equals(pet.owner.id)){ %>
                <form action="/post/<%=post.id%>?_method=DELETE" method="POST">
                    <a class="aTag-show" href="/post/<%=post.id%>">View post</a> <input id="delete-btn" type="submit"
                        value="DELETE">
                </form>
                <% } else {%>
                    <a class="aTag-show" href="/post/<%=post.id%>">View post</a>
                <% } %>
                <div id="comment-div-show">
                    <p class="pet-data">Comments..</p>
                    <%if(post.comments.length){%>
                        <ul>
                            <%post.comments.forEach(function(comment){ %>
                            <li class="pet-data">
                            <%=comment.author.name%>: <%=comment.content%>
                            </li>
                            <% if(user?._id.equals(comment.author.id)){ %>
                                <form action="/comment/<%=comment.id%>?_method=DELETE" method="POST">
                                    <input type="submit" value="Delete">
                                </form>
                            <% } %>
                        <% }) %>
                        </ul>
                    <% } %>
                </div>
            <% }) %>
    </body>